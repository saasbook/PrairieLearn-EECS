<html>
<head>
  <!-- Bootstrap, JQuery, FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="/assets/jquery_ujs.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
  <body>
    <nav>
      <div class="nav-wrapper">
        <div id="name">PrairieLearn Assessment Configuration File Generator</div>
      </div>
    </nav>
    <div class="container h-100">
        <div class="row align-items-center h-100">
          <div class="col-6 mx-auto">
              <div class="jumbotron">
                <blockquote class="blockquote text-center align-middle">
                  <h4>Choose a repository to synchronize:</h4><br>
                  <%= form_with url: "/sync", method: :get do |form|%>
                    <%= form.select :repo_id, @repos.map { |repo| [repo.full_name] }, {class: "form-control"} %>
                    <%= form.button 'submit', class: "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Synchronizing...".html_safe} %>
                  <% end %>
                </blockquote>
              </div>
          </div>
        </div>
      </div>
    <div class="footer"></div>
  </body>
</html>